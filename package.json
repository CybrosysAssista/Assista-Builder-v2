{
  "name": "assista-coder",
  "displayName": "assista-coder",
  "description": "VS Code extension for Assista Coder (Odoo AI Assistant)",
  "publisher": "cybrosys-assista-ltd",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:assistaCoderView",
    "onCommand:assistaCoder.open",
    "onCommand:assistaCoder.settings",
    "onCommand:assistaCoder.openHistory",
    "onCommand:assistaCoder.newChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "assistaCoderSidebar",
          "title": "Assista Coder",
          "icon": "media/assista-logo.svg"
        }
      ]
    },
    "views": {
      "assistaCoderSidebar": [
        {
          "id": "assistaCoderView",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "assistaCoder.open",
        "title": "Open Assista Coder"
      },
      {
        "command": "assistaCoder.newChat",
        "title": "New Chat",
        "icon": "$(add)"
      },
      {
        "command": "assistaCoder.settings",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "assistaCoder.openHistory",
        "title": "History",
        "icon": "$(history)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "assistaCoder.newChat",
          "when": "view == assistaCoderView",
          "group": "navigation@1"
        },
        {
          "command": "assistaCoder.openHistory",
          "when": "view == assistaCoderView",
          "group": "navigation@2"
        },
        {
          "command": "assistaCoder.settings",
          "when": "view == assistaCoderView",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Assista Coder",
      "properties": {
        "assistaCoder.activeProvider": {
          "type": "string",
          "enum": [
            "google",
            "openai",
            "anthropic",
            "openrouter",
            "custom"
          ],
          "default": "google",
          "description": "Active AI provider for generation and chat."
        },
        "assistaCoder.providers": {
          "type": "object",
          "description": "Configuration for each AI provider (API keys saved securely).",
          "properties": {
            "google": {
              "type": "object",
              "properties": {
                "model": {
                  "type": "string",
                  "default": "gemini-1.5-flash-001",
                  "description": "Google Gemini model."
                }
              },
              "description": "Google AI configuration."
            },
            "openai": {
              "type": "object",
              "properties": {
                "model": {
                  "type": "string",
                  "default": "gpt-4o",
                  "description": "OpenAI model."
                }
              },
              "description": "OpenAI configuration."
            },
            "anthropic": {
              "type": "object",
              "properties": {
                "model": {
                  "type": "string",
                  "default": "claude-3-haiku-20240307",
                  "description": "Anthropic model (via OpenRouter)."
                }
              },
              "description": "Anthropic configuration."
            },
            "openrouter": {
              "type": "object",
              "properties": {
                "model": {
                  "type": "string",
                  "default": "anthropic/claude-3.5-sonnet",
                  "description": "OpenRouter model."
                },
                "customUrl": {
                  "type": "string",
                  "default": "https://openrouter.ai/api/v1",
                  "description": "Custom OpenRouter endpoint."
                }
              },
              "description": "OpenRouter configuration."
            },
            "custom": {
              "type": "object",
              "properties": {
                "model": {
                  "type": "string",
                  "default": "gpt-4o",
                  "description": "Custom model."
                },
                "customUrl": {
                  "type": "string",
                  "description": "Custom API endpoint (OpenAI-compatible)."
                }
              },
              "description": "Custom provider configuration."
            }
          },
          "default": {
            "google": {
              "model": "gemini-1.5-flash-001"
            },
            "openai": {
              "model": "gpt-4o"
            },
            "anthropic": {
              "model": "claude-3-haiku-20240307"
            },
            "openrouter": {
              "model": "anthropic/claude-3.5-sonnet",
              "customUrl": "https://openrouter.ai/api/v1"
            },
            "custom": {
              "model": "gpt-4o"
            }
          }
        },
        "assistaCoder.defaultAddonsPath": {
          "type": "string",
          "default": "",
          "description": "Preferred Odoo custom addons directory for creating new modules. If empty, the extension will ask you to pick a folder when creating modules."
        },
        "assistaCoder.customAddonsNames": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "custom_addons",
            "custom_addon"
          ],
          "description": "Folder names to treat as Odoo custom addons directories when scanning the workspace."
        },
        "assistaCoder.openrouterHeaders.referer": {
          "type": "string",
          "default": "https://assista-coder.vscode",
          "description": "Custom HTTP-Referer header to send when using OpenRouter-compatible providers."
        },
        "assistaCoder.openrouterHeaders.title": {
          "type": "string",
          "default": "Assista Coder Extension",
          "description": "Custom X-Title header to send when using OpenRouter-compatible providers."
        },
        "assistaCoder.editScope": {
          "type": "string",
          "enum": [
            "openEditors",
            "visibleEditors",
            "moduleDirectory",
            "workspace"
          ],
          "default": "openEditors",
          "description": "Scope for quick edit operations (e.g., label changes)."
        },
        "assistaCoder.systemPrompt.allowFileOverrides": {
          "type": "boolean",
          "default": true,
          "description": "Allow workspace override files in .assista-coder/ to replace the system prompt per mode."
        },
        "assistaCoder.systemPrompt.customInstructions": {
          "type": "string",
          "default": "",
          "description": "Custom instructions appended to the system prompt for all modes."
        },
        "assistaCoder.rag": {
          "type": "object",
          "description": "RAG (Retrieval-Augmented Generation) configuration for Odoo documentation context.",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable RAG to retrieve relevant Odoo documentation context before generating responses."
            },
            "serverUrl": {
              "type": "string",
              "default": "https://odoo-rag.cyllo.cloud",
              "description": "RAG server URL for retrieving Odoo documentation context."
            },
            "topK": {
              "type": "number",
              "default": 5,
              "description": "Number of top documents to retrieve from RAG server."
            }
          },
          "default": {
            "enabled": true,
            "serverUrl": "https://odoo-rag.cyllo.cloud",
            "topK": 5
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-webview-assets",
    "copy-webview-assets": "mkdir -p out/core/webview/utils out/core/webview/ui out/core/webview/chat out/core/webview/settings out/core/webview/history out/core/webview/welcome out/core/webview/mentions out/core/webview/review && cp src/core/webview/utils/*.js out/core/webview/utils/ 2>/dev/null || true && cp src/core/webview/ui/*.js src/core/webview/ui/*.css out/core/webview/ui/ 2>/dev/null || true && cp src/core/webview/chat/*.js src/core/webview/chat/*.css out/core/webview/chat/ 2>/dev/null || true && cp src/core/webview/settings/*.js src/core/webview/settings/*.css out/core/webview/settings/ 2>/dev/null || true && cp src/core/webview/history/*.js out/core/webview/history/ 2>/dev/null || true && cp src/core/webview/welcome/*.js src/core/webview/welcome/*.css out/core/webview/welcome/ 2>/dev/null || true && cp src/core/webview/mentions/*.js src/core/webview/mentions/*.css out/core/webview/mentions/ 2>/dev/null || true && cp -r src/core/webview/review/* out/core/webview/review/ 2>/dev/null || true",
    "watch": "tsc -watch -p ./",
    "lint": "eslint . --ext .ts,.js",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/genai": "^1.0.0",
    "ajv": "^8.12.0",
    "axios": "^1.7.0"
  }
}